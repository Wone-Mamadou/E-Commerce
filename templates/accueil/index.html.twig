{% extends 'base.html.twig' %}

{% block title %}AccueilController!{% endblock %}

{% block body %}
{{ include("partiel/title_section.html.twig", {'name':"Accueil"}) }}

<div class="container">
    <div class="section small_pt pb_70">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="heading_s1 text-center">
                        <h2>Produits Exclusif</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="tab-style1">
                        <ul class="nav nav-tabs justify-content-center" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="arrival-tab" data-toggle="tab" href="#arrival" role="tab" aria-controls="arrival" aria-selected="true">Nouveautés</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="sellers-tab" data-toggle="tab" href="#sellers" role="tab" aria-controls="sellers" aria-selected="false">Meilleur Vente</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="featured-tab" data-toggle="tab" href="#featured" role="tab" aria-controls="featured" aria-selected="false">Featured</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="offrespecial-tab" data-toggle="tab" href="#offrespecial" role="tab" aria-controls="offrespecial" aria-selected="false">Offre Spéciale</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="arrival" role="tabpanel" aria-labelledby="arrival-tab">
                            <div class="row shop_container">
                                {% for produit in nouvelleArrivage %}
                                    {{ include("partiel/produit.html.twig", {'produit': produit}) }}
                                {% endfor %}

                            </div>
                        </div>
                        <div class="tab-pane fade" id="sellers" role="tabpanel" aria-labelledby="sellers-tab">
                            <div class="row shop_container">
                                {% for produit in meilleurVente %}
                                    {{ include("partiel/produit.html.twig", {'produit': produit}) }}
                                {% endfor %}

                            </div>
                        </div>
                        <div class="tab-pane fade" id="featured" role="tabpanel" aria-labelledby="featured-tab">
                            <div class="row shop_container">
                                {% for produit in isFeatured %}
                                    {{ include("partiel/produit.html.twig", {'produit': produit}) }}
                               {% endfor %}
                            </div>
                        </div>
                        <div class="tab-pane fade" id="offrespecial" role="tabpanel" aria-labelledby="offrespecial-tab">
                            <div class="row shop_container">
                                     {% for produit in offreSpeciale %}
                                 {{ include("partiel/produit.html.twig", {'produit': produit}) }}
                                 {% endfor %}
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
